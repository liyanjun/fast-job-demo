<mapper namespace="org.li.module.sys.dao.impl.SysPermissionDaoImpl">
    <resultMap id="rm" type="org.li.module.sys.bean.SysPermission">
        <result property="roleId" jdbcType="INTEGER" column="ROLE_ID" />
        <result property="resourceId" jdbcType="INTEGER" column="RESOURCE_ID" />
    </resultMap>
    <sql id="Base_Column_List">
        ROLE_ID,
        RESOURCE_ID
    </sql>
    <select id="findById" parameterType="java.lang.Integer" resultMap="rm">
        SELECT
        <include refid="Base_Column_List" />
        FROM sys_permission
        WHERE
        ROLE_ID = #{id} AND
        RESOURCE_ID = #{id}
    </select>
    <select id="findByRoleId" parameterType="java.lang.Integer"
            resultMap="rm">
        SELECT
        <include refid="Base_Column_List" />
        FROM sys_permission
        WHERE
        ROLE_ID = #{id}
    </select>
    <select id="findByRoleIds" parameterType="java.util.List"
            resultMap="rm">
        SELECT
        <include refid="Base_Column_List" />
        FROM sys_permission
        <trim prefix="WHERE" prefixOverrides="AND|OR">
            ROLE_ID in
            <foreach collection="list" item="model" open="(" separator=","
                     close=")">#{ model.roleId}
            </foreach>
        </trim>

    </select>
    <!-- 查询所有的ID -->
    <select id="findAllIds" resultType="java.lang.Integer">
        SELECT ROLE_ID FROM
        sys_permission
    </select>

    <!-- 按Id删除 -->
    <delete id="delete" parameterType="java.lang.Integer">
        DELETE FROM sys_permission
        WHERE
        ROLE_ID = #{id} AND
        RESOURCE_ID = #{id}
    </delete>

    <!-- 按Id删除 -->
    <delete id="deleteByRoleId" parameterType="java.lang.Integer">
        DELETE FROM
        sys_permission
        WHERE
        ROLE_ID = #{id}
    </delete>

    <!-- <delete id="deletes" parameterType="com.microticket.jinglian.admin.bean.sys.ResourceDelete">
        <![CDATA[ delete from sys_permission where ROLE_ID = #{roleId} AND RESOURCE_ID
        in ]]> <foreach collection="resIds" item="model" open="(" separator="," close=")">#{
        model} </foreach> </delete> -->


    <!-- 插入 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="roleId">
        INSERT
        INTO sys_permission (
        ROLE_ID,
        RESOURCE_ID
        ) VALUES (
        #{roleId},
        #{resourceId}
        )
    </insert>

    <select id="countAll" resultType="java.lang.Integer">
        SELECT count(ROLE_ID) FROM
        sys_permission
    </select>

    <select id="findAll" resultMap="rm">
        SELECT
        <include refid="Base_Column_List" />
        FROM sys_permission
    </select>

    <!-- 更新 -->
    <update id="updateSelective" parameterType="com.microticket.jinglian.admin.bean.sys.SysPermission">
        UPDATE sys_permission
        <set>
        </set>
        WHERE
        ROLE_ID = #{roleId} AND
        RESOURCE_ID = #{resourceId}
    </update>

    <update id="update" parameterType="com.microticket.jinglian.admin.bean.sys.SysPermission">
        UPDATE sys_permission SET
        WHERE
        ROLE_ID = #{roleId} AND
        RESOURCE_ID = #{resourceId}
    </update>

</mapper>